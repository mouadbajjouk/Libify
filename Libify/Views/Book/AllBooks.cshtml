@model IEnumerable<Libify.Models.BookModel>

@{
    ViewData["Title"] = "Available books";
}

<div class="container-fluid">
    <h1 class="display-4 text-center my-4">Available Books</h1>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4 mb-3">
                <partial name="_BookThumbnail" model="@book" />
            </div>
        }
    </div>
</div>