@model Libify.Models.EmailConfirmationModel

@{
    ViewData["Title"] = "Confirm email";
}

<div class="container-fluid">

    <h1 class="display-3 text-center">Email confirmation</h1>

    <hr />

    <div class="row">

        <div class="col"></div>
        <div class="col-md-4">

            @if (Model.EmailVerified == true)
            {
                <div class="alert alert-success" role="alert">
                    <p>Your email has been verified successfully!</p>
                </div>
            }
            else
            {
                if (Model.EmailSent == true)
                {
                    <p>Email sent, check your inbox.</p>
                }
                else
                {
                    <p>Email sent, check your inbox.</p>
                }

                <form asp-action="ConfirmEmail">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Email" />
                    </div>

                    <p>Did not receive the email or deleted?</p>

                    <div class="form-group">
                        <input type="submit" value="Resend confirmation email" class="btn btn-primary" />
                    </div>
                </form>
            }
        </div>
        <div class="col"></div>
    </div>
</div>

